@using WEB.Models
@model Book
@{
    ViewData["Title"] = "Detail";
}

<div class="text-center"><h1 class="display-4">Detail</h1></div>

<div class="info-box">
    <h2>Book Information</h2>
    <table>
        <tr>
            <td>Title:</td>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <td>Author:</td>
            <td>@Model.Author!.Name</td>
        </tr>
        <tr>
            <td>Category:</td>
            <td>@Model.Category!.Name</td>
        </tr>
        <tr>
            <td>Publisher:</td>
            <td>@Model.Publisher!.Name</td>
        </tr>
        <tr>
            <td>Price:</td>
            <td>@Model.Price</td>
        </tr>
        <tr>
            <td>Quantity:</td>
            <td>@Model.Quantity</td>
        </tr>
        <tr>
            <td>Description:</td>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <td>Publish Year:</td>
            <td>@Model.PublishYear</td>
        </tr>
        <tr>
            <td>Language:</td>
            <td>@Model.Language</td>
        </tr>
        <tr>
            <td>Page Count:</td>
            <td>@Model.PageCount</td>
        </tr>
        <tr>
            <td>Edition:</td>
            <td>@Model.Edition</td>
        </tr>
    </table>
    <br />
    <a asp-action="Loan" asp-route-id="@Model.BookId" class="btn btn-primary">Loan</a>
</div>

<style>
    .info-box {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 20px;
    }

    h2 {
        font-size: 24px;
        margin-top: 0;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    td {
        padding: 5px;
        font-size: 16px;
        border-bottom: 1px solid #ccc;
    }

        td:first-child {
            font-weight: bold;
            width: 120px;
        }

    .btn {
        padding: 8px 12px;
        border-radius: 5px;
        color: #fff;
        font-weight: bold;
        text-decoration: none;
        cursor: pointer;
        margin-right: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }
</style>
