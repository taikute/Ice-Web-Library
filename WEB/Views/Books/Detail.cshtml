@model WEB.Models.Book

@{
    ViewData["Title"] = "Detail";
}

<div class="text-center"><h1 class="display-4">@ViewData["Title"]</h1></div>

<div class="info-box">
    <div class="book-info">
        <div class="book-image">
            <img src="/book-cover-img/@Url.Content(Model.CoverImagePath)" alt="Book Image">
        </div>
        <div class="book-details">
            <h2>@Model.Title</h2>
            <p><strong>Author:</strong> @Model.Author!.Name</p>
            <p><strong>Category:</strong> @Model.Category!.Name</p>
            <p><strong>Publisher:</strong> @Model.Publisher!.Name</p>
            <p><strong>ISBN:</strong> @Model.ISBN</p>
            <p><strong>Price:</strong> @Model.Price</p>
            <p><strong>Quantity:</strong> @Model.Quantity</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Publish Year:</strong> @Model.PublishYear</p>
            <p><strong>Language:</strong> @Model.Language</p>
            <p><strong>Page Count:</strong> @Model.PageCount</p>
            <p><strong>Edition:</strong> @Model.Edition</p>
        </div>
    </div>
    <div class="loan-button">
        <a asp-controller="Loans" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-primary">Loan</a>
    </div>
</div>

<style>
    .text-center {
        text-align: center;
    }

    .info-box {
        background-color: #f5f5f5;
        border-radius: 30px;
        padding: 20px;
        margin: 20px;
    }

    .book-info {
        display: flex;
        align-items: center;
    }

    .book-image img {
        max-width: 200px;
        height: auto;
        margin-right: 20px;
    }

    .book-details h2 {
        margin-top: 0;
    }

    .book-details p {
        margin-bottom: 10px;
    }

    .loan-button {
        text-align: center;
        margin-top: 20px;
    }
</style>
