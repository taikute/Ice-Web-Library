@using WEB.Models
@model BookBaseModel

@{
    ViewData["Title"] = "Create";
}

<div class="text-center"><h1 class="display-4">Create Book</h1></div>
@{
    var authors = ViewBag.Authors as List<AuthorModel>;
    var categories = ViewBag.Categories as List<CategoryModel>;
    var publishers = ViewBag.Publishers as List<PublisherModel>;
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="BookId" value="0"/>
    <div class="form-group">
        <label asp-for="AuthorId" class="control-label">Author Name</label>
        <select asp-for="AuthorId" asp-items="@(new SelectList(authors, "AuthorId", "Name"))" class="form-control"></select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Category Name</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(categories, "CategoryId", "Name"))" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PublisherId" class="control-label">Publisher Name</label>
        <select asp-for="PublisherId" asp-items="@(new SelectList(publishers, "PublisherId", "Name"))" class="form-control"></select>
        <span asp-validation-for="PublisherId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter title" value="NewTitle" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Enter description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PublishYear" class="control-label"></label>
        <input asp-for="PublishYear" class="form-control" placeholder="Enter publish year" value="2023" />
        <span asp-validation-for="PublishYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" placeholder="Enter price" value="0" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" value="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ISBN" class="control-label"></label>
        <input asp-for="ISBN" class="form-control" placeholder="Enter ISBN" value="ISBN" />
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Language" class="control-label"></label>
        <input asp-for="Language" class="form-control" placeholder="Enter language" value="English" />
        <span asp-validation-for="Language" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PageCount" class="control-label"></label>
        <input asp-for="PageCount" class="form-control" placeholder="Enter page count" value="99" />
        <span asp-validation-for="PageCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Edition" class="control-label"></label>
        <input asp-for="Edition" class="form-control" placeholder="Enter edition" value="1" />
        <span asp-validation-for="Edition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@if (ViewBag.ErrorMessenger != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMsg</div>
}