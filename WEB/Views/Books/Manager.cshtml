@model IEnumerable<WEB.Models.Book>

@{
    ViewData["Title"] = "Manager";
}

<div class="text-center"><h1 class="display-4">Manager</h1></div>

<style>
    .scrollable-table-wrapper {
        overflow-x: auto;
        white-space: nowrap;
    }

    .scrollable-table {
        border-collapse: collapse;
        width: 100%;
    }

        .scrollable-table th,
        .scrollable-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
</style>
<a href="@Url.Action("Create")" class="btn btn-primary">Create New Book</a>
<div class="scrollable-table-wrapper">
    <table class="scrollable-table">
        <thead>
            <tr>
                <th>Serial</th>
                <th>@Html.DisplayNameFor(model => model.Author!.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Category!.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Publisher!.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.PublishYear)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                <th>@Html.DisplayNameFor(model => model.Language)</th>
                <th>@Html.DisplayNameFor(model => model.PageCount)</th>
                <th>@Html.DisplayNameFor(model => model.Edition)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                int serial = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@serial</td>
                    <td>@Html.DisplayFor(modelItem => item.Author!.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Category!.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Publisher!.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>See On Detail</td>
                    <td>@Html.DisplayFor(modelItem => item.PublishYear)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.Language)</td>
                    <td>@Html.DisplayFor(modelItem => item.PageCount)</td>
                    <td>@Html.DisplayFor(modelItem => item.Edition)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detail</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
                serial++;
            }
        </tbody>
    </table>
</div>
