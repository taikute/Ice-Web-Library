@model WEB.Models.Book

@{
    ViewData["Title"] = "Loan";
}

<div class="text-center"><h1 class="display-4">Loan</h1></div>

<h2>Are you sure you want to loan the book with title: @Model.Title</h2>

<form method="post" asp-action="CreateConfirmed">
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Books" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>