@model IEnumerable<WEB.Models.Loan>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center"><h1 class="display-4">Loan History</h1></div>

@if (Model.Count() == 0)
{
    <h4>You haven't borrowed any books yet, would you like to <a href="@Url.Action("Index", "Books")">borrow</a> a book?</h4>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InstanceId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BorrowedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReturnedDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstanceId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BorrowedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReturnedDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
