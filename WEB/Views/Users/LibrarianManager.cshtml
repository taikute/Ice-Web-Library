@model IEnumerable<WEB.Models.User>

@{
    ViewData["Title"] = "Librarian Manager";
}

<h1 class="text-center display-4">@ViewData["Title"]</h1>

<a class="btn btn-primary" style="margin-bottom: 20px;" asp-action="CreateLib">Create Librarian</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="">Edit</a>
                    <a class="btn btn-primary" asp-action="">Lock</a>
                </td>
            </tr>
        }
    </tbody>
</table>
